{
  "name": "url-shortener-server",
  "version": "1.0.0",
  "description": "URL Shortener Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:local": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "docker:build": "docker build -t url-shortener-api .",
    "docker:run": "docker run -d -p 5000:5000 --env-file .env --name url-shortener-api url-shortener-api",
    "docker:stop": "docker stop url-shortener-api",
    "docker:clean": "docker stop url-shortener-api && docker rm url-shortener-api",
    "docker:logs": "docker logs -f url-shortener-api"
  },
  "keywords": [
    "url-shortener",
    "express",
    "typescript",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nanoid": "^3.3.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
